{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "noUncheckedSideEffectImports": false
  },
  "include": ["src"],
  "exclude": [
    "src/style.ts",
    "src/styles/**",
    "src/**/style/**"
  ]
}
